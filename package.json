{
  "name": "dutrinkst",
  "version": "1.0.0",
  "description": "justKile and Astrobra presents: DuTrinkst",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf target",
    "test": "npm run unit",
    "server": "gulp serve & sls offline start --port 2999",
    "watch": "npm run clean && (npm run server & gulp watch & npm run unit:watch)",
    "start": "npm run clean && npm run browser:build && npm run server",
    "deploy": "npm run build && (npm run browser:deploy & npm run server:deploy)",
    "server:deploy": "sls deploy -v",
    "browser:deploy": "gulp deploy:assets",
    "browser:build": "gulp build:client",
    "unit:server": "ava lib/server/**/*.spec.js",
    "unit:browser": "ava lib/browser/**/*.spec.js --require ./test/browser/setup-browser-env.js",
    "unit:browser:watch": "ava lib/browser/**/*.spec.js --source lib/browser/**/*.js --require ./test/browser/setup-browser-env.js --watch",
    "unit:server:watch": "ava lib/server/**/*.spec.js --source 'lib/server/**/*!(spec).js' --watch ",
    "unit":"npm run unit:server && npm run unit:browser",
    "unit:watch":"npm run unit:server:watch & npm run unit:browser:watch",
    "build": "npm run clean && npm run browser:build && npm run unit"
  },
  "author": "Ben Lenser",
  "license": "MIT",
  "dependencies": {
    "confidence": "^3.0.2",
    "lodash": "^4.16.4"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "ava-spec": "^1.0.1",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "babel-register": "^6.16.3",
    "bootstrap-styl": "^5.0.8",
    "browser-env": "^2.0.12",
    "browser-sync": "^2.17.2",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "gulp": "^3.9.1",
    "gulp-ava": "^0.14.1",
    "gulp-awspublish": "^3.3.0",
    "gulp-rename": "^1.2.2",
    "gulp-serve": "^1.4.0",
    "json-loader": "^0.5.4",
    "lodash": "^4.16.4",
    "mkdirp": "^0.5.1",
    "nyc": "^8.3.1",
    "require-dir": "^0.3.1",
    "serverless": "^1.0.2",
    "serverless-offline": "git+https://github.com/dherault/serverless-offline.git/#serverless_v1",
    "serverless-webpack": "^1.0.0-rc.2",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.3.1",
    "webpack-node-externals": "^1.5.4",
    "webpack-stream": "^3.2.0"
  },
  "ava": {
    "concurrency": 5,
    "failFast": true,
    "tap": false,
    "powerAssert": false,
    "require": [
      "babel-register"
    ],
    "verbose": true
  }
}
